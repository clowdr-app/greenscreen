        {
            "label": "Start Docker -- Local Development",
            "type": "shell",
            "isBackground": true,
            "command": "docker",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "runOptions": {
                "instanceLimit": 1
            },
            "args": ["compose", "--env-file", ".env.${input:environment}", "-f", "./docker-compose.db.yaml", "up", "-d"]
        }
    ],
    "inputs": [
        {
            "id": "environment",
            "description": "Environment name",
            "default": "local",
            "type": "promptString"
        }
    ]
}
