{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Docker Services -- Local Development",
            "type": "shell",
            "isBackground": true,
            "command": "pnpm",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "runOptions": {
                "instanceLimit": 1
            },
            "args": [
                "docker",
                "compose",
                "--env-file",
                ".env.${input:environment}",
                "-f",
                "./scripts/docker-compose.db.yaml",
                "up",
                "-d"
            ]
        }
    ],
    "inputs": [
        {
            "id": "environment",
            "description": "Environment name",
            "default": "local",
            "type": "promptString"
        }
    ]
}
